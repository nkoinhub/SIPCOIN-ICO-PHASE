doctype html
html(lang='en')
  head
    title SIPcoin
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/index.css')
    link(rel='stylesheet', href='/css/styleLogin.css')
    script(src='/js/views/jquery.min.js')
    script(src='/js/views/bootstrap.min.js')
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicons/favicon-16x16.png">
    <link rel="manifest" href="/images/favicons/manifest.json">
    <link rel="mask-icon" href="favicons/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="theme-color" content="#ffffff">
  body
    #first_frame
      .container
        .row
          nav.navbar.navbar-inverse.navbar-fixed-top
            .container-fluid
              .navbar-header
                button.navbar-toggle(style='margin-top:15px;', type='button', data-toggle='collapse', data-target='#myNavbar')
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                a(href='/', style='border:none;color:white;margin:20px;')
                  img(src='/images/sipcoin_logo2d.png', alt='Person',style='height:40px;width:40px;')
                a(href='/', style='text-decoration:none;color:white;font-size:30px;') SIPcoin
              #myNavbar.collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                  button.btn(type='button',style="margin-top:10px;margin-bottom:5px;")
                    .chip(style='font-size:18px;')
                      img(src='/images/coin.png', alt='Person',style='height:40px;width:40px;')
                      |    $ #{USD}
                  button.btn(type='button',style="margin-top:10px;margin-bottom:5px;")
                    .chip(style='font-size:18px;')
                      img(src='/images/sipcoin_logo2d.png', alt='Person', style='height:40px;width:40px;')
                      |    $ #{SIP}
                  //
                    <li><div class="chip"><img src="/images/avatar.png" alt="Person" width="96" height="96"></div><a class="bit_current_value" href="#" style="color:white;font-size:25px;margin-top:10px;"> $ 1234  </a></li>
                    <li><a class="sip_current_value" href="#" style="color:white;font-size:25px;margin-top:10px;"> Sipcoin &nbsp; - &nbsp; $ 1.5 </a></li>
      div
        .container
          .row
            .col-sm-4.col-sm-offset-4
              #login.center-vertical_1
                form#form-login.well(method='post', style='background-color:#032b2f')
                  h2(style='color:white;') SIPcoin
                  h6(style='color:white;') Login
                  .form-group
                    label(style='color:white;') Username
                    input#user-tf.form-control(type='text', name='user')
                  .form-group
                    label(style='color:white;') Password
                    input#pass-tf.form-control(type='password', name='pass')
                  .controls
                    button.btn.btn-default.button-rememember-me(type='button',style="background-color:white;")
                      span.glyphicon.glyphicon-unchecked.button-rememember-me-glyph
                      | Remember Me
                    button.btn.btn-primary.button-sign-in(type='submit')
                      span.glyphicon.glyphicon-lock
                      | Sign In
                  .clearfix
                  hr
                  .btm-links
                    #forgot-password
                      a(href='#',style="color:white;text-decoration:none;") Forgot Your Password?
                    #create-account
                      a(href='/signup',style="color:white;text-decoration:none;") Create An Account
                  .clearfix
        #footer.my_footer_class(style='margin-bottom:0px;')
          .container
            .row
              br
              .col-sm-4
                center
                  button.btn(type='button', style='padding-top:20px;')
                    a(href='/', style='border:none;color:white;margin-right:0px;')
                      img(src='/images/sipcoin_logo2d.png', alt='Person', width='50', height='50')
                  button.btn(type='button', style='padding-top:20px;')
                    a(href='/', style='text-decoration:none;color:white;font-size:30px;') SIPcoin
              .col-sm-4
                .row
                  .col-sm-12
                    h3 Contact
                  .col-sm-12
                    h4
                      a(href='http://support.sipcoin.io', style='border:none;color:white;margin-right:0px;' target='_blank') support.sipcoin.io
                  .col-sm-12
              .col-sm-4
                .row
                  br
                  .col-sm-12
                    h3 Follow Us
                  .col-sm-12
                    a(href='', target='_blank')
                      img(src='/images/facebook.png', height='50px;', width='50px;', style='margin-right:15px;')
                    a(href='', target='_blank')
                      img(src='/images/insta_1.png', height='50px;', width='50px;', style='margin-right:15px;')
                    a(href='', target='_blank')
                      img(src='/images/twitter.png', height='50px;', width='50px;', style='margin-right:15px;')
                    a(href='', target='_blank')
                      img(src='/images/Slack.png', height='50px;', width='50px;', style='margin-right:15px;')
              .col-sm-12
                hr
              .col-sm-12
                center
                  h4 Â© Copyright sipcoin.io 2017
              .col-sm-12
                br
